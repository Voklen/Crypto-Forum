	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'crypto_forum'",
			"cargo": {
				"args": [
					"build",
					"--bin=crypto_forum",
					"--package=crypto_forum"
				],
				"filter": {
					"name": "crypto_forum",
					"kind": "bin"
				}
			},
			"args": [
				"-i",
				"test_data/messages.json"
			],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'crypto_forum'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=crypto_forum",
					"--package=crypto_forum"
				],
				"filter": {
					"name": "crypto_forum",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}